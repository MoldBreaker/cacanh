<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <form action="/login" method="POST" id="login-form">
            <div class="pb-5">
            
              <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
              <p class="text-white-50 mb-5">Please enter your login and password!</p>

              <div class="form-outline form-white mb-4">
                <input name="email"type="email" id="typeEmailX" class="form-control form-control-lg" />
                <label class="form-label" for="typeEmailX">Email</label>
              </div>
              <span id="email-err" class="text-danger"></span>

              <div class="form-outline form-white mb-4">
                <input name ="password" type="password" id="typePasswordX" class="form-control form-control-lg" />
                <label class="form-label" for="typePasswordX">Password</label>
              </div>
              <span id="password-err" class="text-danger"></span>
              

              <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">Forgot password?</a></p>

              <button id="login-btn" class="btn btn-outline-light btn-lg px-5" type="submit">Login</button>
            </div>
            </form>

            <div>
              <p class="">Don't have an account? <a href="/signup" class="text-white-50 fw-bold">Sign Up</a>
              </p>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
    .gradient-custom {
/* fallback for old browsers */
background: rgb(134, 34, 248);

/* Chrome 10-25, Safari 5.1-6 */
background: -webkit-linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1));

/* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
background: linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1))
}
</style>
<script>
   let loginForm = document.getElementById("login-form");
   let loginBtn = document.getElementById("login-btn");
   loginBtn.onclick = function(e){
      let check = true;
      let form =new FormData(loginForm);
      let email = form.get("email");
      let password = form.get("password");
     var emailRegex = /^(([^<>()[\]\.,;:\s@\"]+(\.[^<>()[\]\.,;:\s@\"]+)*)|(\".+\"))@(([^<>()[\]\.,;:\s@\"]+\.)+[^<>()[\]\.,;:\s@\"]{2,})$/i;
        if(email.length === 0) {
            document.getElementById('email-err').innerHTML = "Email is required!";
            check = false;
        } else if(!emailRegex.test(email)) {
            document.getElementById('email-err').innerHTML = "Email is invalid!";
            check = false;
        } else {
            document.getElementById('email-err').innerHTML = "";
        }

        var passRegex = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])[0-9a-zA-Z]{8,}$/;
        if(password.length === 0) {
            document.getElementById('password-err').innerHTML = "Password is required!";
            check = false;
        }else if(!passRegex.test(password)){
            document.getElementById('password-err').innerHTML = "Password is invalid!";
            check = false;
        }else{
            document.getElementById('password-err').innerHTML = "";
        }
   }
    
  
</script>