<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="pb-5">

              <h2 class="fw-bold mb-2 text-uppercase">Signup</h2>

              <form action="/signup" method="POST" id="signup-form">
                <div class="form-outline form-white mb-4">
                <input name="username" type="text" id="typeUsernameX" class="form-control form-control-lg" required/>
                <label class="form-label" for="typeUsernameX">Username</label>
              </div>
              <span id="username-err" class="text-danger"></span>

              <div class="form-outline form-white mb-4">
                <input  name="email" type="email" id="typeEmailX" class="form-control form-control-lg" required/>
                <label class="form-label" for="typeEmailX">Email</label>
              </div>
              <span id="email-err" class="text-danger"></span>

              <div class="form-outline form-white mb-4">
                <input  name="password" type="password" id="typePasswordX" class="form-control form-control-lg" />
                <label class="form-label" for="typePasswordX">Password</label>
              </div>
              <span id="password-err" class="text-danger"></span>
               <div class="form-outline form-white mb-4">
                <input  name="cpassword" type="password" id="typeConfirmPasswordX" class="form-control form-control-lg" />
                <label class="form-label" for="typeConFirmPasswordX">Confirm Password</label>
              </div>
              <span id="cpassword-err" class="text-danger"></span>

              <div class="form-outline form-white mb-4">
                <input   name="phone" type="text" id="typePhoneX" class="form-control form-control-lg" />
                <label class="form-label" for="typePhoneX">Phone Number</label>
              </div>
              <span id="phone-err" class="text-danger"></span>
              <button id="signup-btn" class="btn btn-outline-light btn-lg px-5" type="submit">Signup</button>

              </form>


              <div class="d-flex justify-content-center text-center mt-4 pt-1">
                <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
              </div>
            </div>

            <div>
              <p class="">Have an account yet? <a href="/login" class="text-white-50 fw-bold">Login</a>
              </p>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
    let signupForm = document.getElementById('signup-form');
    let signupBtn = document.getElementById('signup-btn');

    signupBtn.onclick = (e) => {
        let check = true;

        let form = new FormData(signupForm);
        let username = form.get('username');
        let email = form.get('email');
        let password = form.get('password');
        let cpassword = form.get('cpassword');
        let phone = form.get('phone');

        if(username.length === 0) {
            document.getElementById('username-err').innerHTML = "Username is required!";
            check = false;
        } else {
            document.getElementById('username-err').innerHTML = "";
        }
        var emailRegex = /^(([^<>()[\]\.,;:\s@\"]+(\.[^<>()[\]\.,;:\s@\"]+)*)|(\".+\"))@(([^<>()[\]\.,;:\s@\"]+\.)+[^<>()[\]\.,;:\s@\"]{2,})$/i;
        if(email.length === 0) {
            document.getElementById('email-err').innerHTML = "Email is required!";
            check = false;
        } else if(!emailRegex.test(email)) {
            document.getElementById('email-err').innerHTML = "Email is invalid!";
            check = false;
        } else {
            document.getElementById('email-err').innerHTML = "";
        }
        
        var passRegex = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])[0-9a-zA-Z]{8,}$/;
        if(password.length === 0) {
            document.getElementById('password-err').innerHTML = "Password is required!";
            check = false;
        }else if(!passRegex.test(password)){
            document.getElementById('password-err').innerHTML = "Password is invalid!";
            check = false;
        }else{
            document.getElementById('password-err').innerHTML = "";
        }

        if(cpassword != password) {
            document.getElementById('cpassword-err').innerHTML = "Password does not match!";
            check = false;
        }else{
            document.getElementById('cpassword-err').innerHTML = "";
        }

        var phoneRegex = /(84|0[3|5|7|8|9])+([0-9]{8})\b/;
        if(phone.length === 0) {
            document.getElementById('phone-err').innerHTML = "Phone number is required!";
            check = false;
        }else if(!phoneRegex.test(phone)){
            document.getElementById('phone-err').innerHTML = "Phone number is invalid!";
            check = false;
        }else{
            document.getElementById('phone-err').innerHTML = "";
        }

        if(check==false) {
            e.preventDefault();
        }
    }
</script>

